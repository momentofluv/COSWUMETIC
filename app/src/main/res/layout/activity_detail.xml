<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="true"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="horizontal"
        tools:context=".DetailActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/line"
            app:srcCompat="@drawable/listicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:orientation="vertical"
            tools:context=".DetailActivity">

            <TextView
                android:id="@+id/catInfo"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="카테고리"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/nameInfo"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="제품명"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        tools:context=".DetailActivity">

        <TextView
            android:id="@+id/openbox"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text2"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="개봉일"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/opendateInfo"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="YYYY년 MM월 DD일"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        tools:context=".DetailActivity">

        <TextView
            android:id="@+id/expDateDetail"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text2"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="유통기한"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/expDateDetailInfo"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="YYYY년 MM월 DD일"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:context=".DetailActivity">

        <TextView
            android:id="@+id/dDayInfo"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="YYYY.MM.DD"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:orientation="horizontal"
        tools:context=".DetailActivity">

        <TextView
            android:id="@+id/memotext"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/line"
            android:ems="10"
            android:gravity="top"
            android:inputType="text"
            android:text=" 메모"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        tools:context=".DetailActivity">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#FD8174"
            android:text="삭제" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled" />

</LinearLayout>


