<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="true"
        android:orientation="vertical"
        tools:context=".AddActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <ImageView
                android:id="@+id/photoButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="#CCDAFF"
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:scaleType="centerInside"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp"
                app:srcCompat="@drawable/camera"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="195dp" />

            <Spinner
                android:id="@+id/catSpinner"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <TextView
                android:id="@+id/cosNametxt"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="이름"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/cosName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:hint="화장품 이름"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <TextView
                android:id="@+id/openDatetxt"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="개봉일"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/openDate"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:hint="ex) 2023-01-01"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <TextView
                android:id="@+id/expDatetxt"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="유통기한"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/expDate"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:hint="ex) 2023-01-01"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <EditText
                android:id="@+id/memotext"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="text"
                android:hint=" 메모"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            tools:context=".AddActivity">

            <Button
                android:id="@+id/rgsButton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginLeft="158dp"
                android:backgroundTint="#8BAAFF"
                android:text="등록" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled" />

</RelativeLayout>
